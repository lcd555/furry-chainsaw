    android:layout_height="match_parent"
    android:background="#e6E6E6"
    android:orientation="vertical"
    >

    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
